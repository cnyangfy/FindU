/* pages/post/post.wxss */
page {
    height: 100%;
    /* background: cornflowerblue; */
}

.mypost{
    font-size: 32rpx;
}
.top{
    width: 100%;
    height: 90rpx;
}
.title{
    font-size: 42rpx;
    font-weight: 900;
}
.subTitle{
    font-size: 34rpx;
    font-weight: 700;
}
    

   
.basicInfo{
    margin-bottom: 35rpx;
}
.table{
    margin:0 auto;
    width:600rpx;
    border: none;
    border-radius: 3px;
    box-shadow: 0 12px 5px -10px rgba(0,0,0,0.3), 0 0 4px 0 rgba(0,0,0,0.3);
    -webkit-box-shadow: 0 12px 5px -10px rgba(0,0,0,0.3), 0 0 4px 0 rgba(0,0,0,0.3);
}
.row{
    display: flex;
    flex-direction: row;
    }
.name{
    width: 250rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    font-weight: 550;
}
.info{
    width: 300rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
}
      

.partner{
    margin-bottom: 35rpx;
}
.line{
    margin:0 auto;
    width:600rpx;
    border: none;
    border-radius: 3px;
    box-shadow: 0 12px 5px -10px rgba(0,0,0,0.3), 0 0 4px 0 rgba(0,0,0,0.3);
    -webkit-box-shadow: 0 12px 5px -10px rgba(0,0,0,0.3), 0 0 4px 0 rgba(0,0,0,0.3);
}

.secondRow{
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.secondRow .text{
    font-size: 32rpx;
}
.secondRow .data{
    font-size: 33rpx;
    font-weight: 900;
}

.intro{
    margin-bottom: 35rpx;
}
.introText{
    margin:0 auto;
    width:600rpx;
    height: 300rpx;
    border: none;
    border-radius: 3px;
    box-shadow: 0 12px 5px -10px rgba(0,0,0,0.3), 0 0 4px 0 rgba(0,0,0,0.3);
    -webkit-box-shadow: 0 12px 5px -10px rgba(0,0,0,0.3), 0 0 4px 0 rgba(0,0,0,0.3);
}

.button{
    width: 50%;
    margin: 0 auto;
    border: none;
    border-radius: 3px;
    box-shadow: 0 12px 5px -10px rgba(0,0,0,0.3), 0 0 4px 0 rgba(0,0,0,0.3);
    -webkit-box-shadow: 0 12px 5px -10px rgba(0,0,0,0.3), 0 0 4px 0 rgba(0,0,0,0.3);
}
    
  
.none{
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.none .message{
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 300rpx;
    font-size: 35rpx;
    color: #505050;
}