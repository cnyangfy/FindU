    display: flex;
    justify-content: center;
}
.nameTitle{
    width: 300rpx;
    height: 100rpx;
    font-size: 18px;
    font-weight: 900;
}

.nameInput{
    width: 300rpx;
    height: 50rpx;
    text-align:center;

    border: none;
    border-radius: 3px;
