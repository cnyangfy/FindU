.userInfo{
    display: flex;
    flex-direction: column;
    align-content: space-around;
    justify-content: space-evenly;
}
.avatar{
    display: flex;
    justify-content: center;
    
    width: 100%;
    height: 250rpx;
}
.userAvatar{
    margin-top: 35rpx;
    width: 170rpx;
    height: 170rpx;
}


